{{#if theUser.location}}
<h3>Add an adoption listing to your location</h3>

<form action= "/animals/create" method="post">
    <label for="animal-name-input">
        Animal name:
        <input id="animal-name-input" type="text" placeholder= "Theon Greyjoy" name= "name">
    </label>
   
    <label>
        Color:
        <input type="text" name= "color">
    </label>

    <label>
        Species:
        <input  type="text" name= "species" >
    </label>

    <label>
        Sex:
        <input  type="text" name= "sex" >
    </label>

    <label>
        Vaccinated:
        <input  type="checkbox" name= "vaccinated" value="true">
    </label>

      <label>
        Aggressive:
        <input  type="checkbox" name= "agressive" value="true">
    </label>

      <label>
        Available:
        <input  type="checkbox" name= "available" >
    </label>



    <br>
    <button>Create</button>
</form>
{{else}}
<h2>Add Your Location to the Platform to be able to add animals</h2>

<form action="/locations/create" method="post">

<label for="">
    Address:
    <input type="text" id="address" name="address">
</label>

<label for="">
    Apartment Number:
    <input type="number" id="apartmentNumber" name="apartmentNumber">
</label>

<label for="">
    Zip:
    <input type="number" id="zip" name="zip">
</label>

<label for="">
    City:
    <input type="text" id="city" name="city">
</label>

<label for="">
    State:
    <input type="text" id="state" name="state">
</label>

<button type="sumbit" class="btn btn-primary">Save</button>
</form>
{{/if}}